<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seccion_Home"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar"
            android:background="@color/blau_marino"
            android:theme="@style/Widget.AppCompat.Toolbar"
            app:popupTheme="@style/Theme.AppCompat.Light"
            app:titleTextColor="@color/white">

            <!-- Icon ImageView -->
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_white"
                android:layout_gravity="center_vertical" />

            <!-- Centered title TextView -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_gravity="center_vertical"
                android:text="  InformaVies CAT"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="26sp"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benvingut/uda"
            android:id="@+id/saludoTextView"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/blau_marino"
            ></TextView>

        <ImageView
            android:id="@+id/afectationsImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/saludoTextView"
            android:layout_marginTop="-20dp"
            android:src="@drawable/afectations" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mapaImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/saludoTextView"
                android:layout_marginLeft="20dp"
                android:src="@drawable/mapa" />

            <!-- TextView for text on the right -->
            <TextView
                android:layout_width="0dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="Gràcies! Hem resolt 113 incidències a través de les notificacions rebudes en aquesta app."
                android:textSize="16sp"
                android:id="@+id/incidencies_totals"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les teves incidències reportades:"
            android:id="@+id/possible"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/blau_marino"
            ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="2">

            <!-- Square 1 -->
            <FrameLayout
                android:id="@+id/statsTipo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#80CED7"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/statsTipo1Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hello!"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </FrameLayout>

            <!-- Square 2 -->
            <FrameLayout
                android:id="@+id/statsTipo2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#FEB600"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/statsTipo2Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hello!"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </FrameLayout>

            <!-- Square 3 -->
            <FrameLayout
                android:id="@+id/statsTipo3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#9A901E"
                android:gravity="center"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/statsTipo3Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hello!"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </FrameLayout>

            <!-- Square 4 -->
            <FrameLayout
                android:id="@+id/statsTipo4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#3D575A">

                <TextView
                    android:id="@+id/statsTipo4Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hello!"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </FrameLayout>

            <!-- Square 5 -->
            <FrameLayout
                android:id="@+id/statsTipo5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#AEADAE"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/statsTipo5Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hello!"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </FrameLayout>

            <!-- Square 6 -->
            <FrameLayout
                android:id="@+id/statsTipo6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@color/blau_marino"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/statsTipo6Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hello!"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </FrameLayout>

        </GridLayout>

    </LinearLayout>



    </LinearLayout>



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/blau_marino"
        app:itemTextColor="@color/black">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
